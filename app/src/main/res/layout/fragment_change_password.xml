<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".ui.auth.forgot_password.change_password.ChangePasswordFragment">


    <include
        android:id="@+id/backBtnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/back_btn_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/chngPassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtnLayout"/>

    <TextView
        android:id="@+id/chngInfoTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your new password must be diffrent \nfrom previous used passwords."
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chngPassTxt"/>

    <TextView
        android:id="@+id/passTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chngInfoTxt"/>
    <EditText
        android:id="@+id/rPasswordEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:backgroundTint="@color/textColor"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:autofillHints="false"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="17dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passTxt"
        />

    <TextView
        android:id="@+id/mstBeTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="7dp"
        android:text="Must be at least 8 characters."
        android:textSize="14sp"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="@id/rPasswordEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rPasswordEt"/>



    <TextView
        android:id="@+id/CpassTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:text="Confirm Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mstBeTxt"/>

    <EditText
        android:id="@+id/rConfirmPasswordEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:backgroundTint="@color/textColor"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:autofillHints="false"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="17dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CpassTxt"
        />

    <TextView
        android:id="@+id/mstBeTxt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="7dp"
        android:text="Both passwords must match."
        android:textSize="14sp"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="@id/rConfirmPasswordEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rConfirmPasswordEt"/>


    <Button
        android:id="@+id/resetPassbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mstBeTxt2"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btn_color"
        android:padding="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>